#include <stdio.h>
int main() {
    
    int number;
    int sum = 0;
    
    printf("Enter a non-negative whole number:\n");
    scanf("%d", &number);
  
    if  ( number < 0) {
        printf("Terminated.");
    }
    
       while (number != 0) {
        int digit = number % 10;
        sum += digit;
        number /= 10;
    }

    printf("The sum of the digits entered is %d\n", sum);

    return 0;
}
